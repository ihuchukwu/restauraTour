  </div>

  <div class="form-group">
    <%= f.label :description, :class => 'col-sm-2 control-label' %>
    <div class="col-sm-10">
      <%= f.text_area :description %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :location, :class => 'col-sm-2 control-label' %>
    <div class="col-sm-10">
      <%= f.select :location, ['California', 'Florida', 'Louisiana', 'Maryland', 'North Carolina', 'New Jersey', 'New York', 'Pennsylvania', 'South Carolina', 'Texas', 'Washington'] %>
    </div>
  </div>
  <br>
  <br>
  <div class="btn btn-primary">
    <%= f.label :image %><br>
    <%= f.file_field :image %>
  </div>
  <br>
  <br>
  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <%= f.submit :class => 'btn btn-primary' %>
    </div>
  </div>
