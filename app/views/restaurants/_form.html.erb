<%= form_for @restaurant, :html => {:multipart => true} do |f| %>

  <div>
    <%= f.label :name %>
    <%= f.text_field :name %>
  </div>

  <div>
    <%= f.label :description %>
    <%= f.text_area :description %>
  </div>

  <div>
    <%= f.label :location %>
    <%= f.text_field :location %>
  </div>

  <div>
    <%= f.file_field :image %>
  </div>
  <div>
    <%= f.label :remote_image_url %><br>
    <%= f.text_field :remote_image_url %>
  </div>
  <p><%= f.submit %></p>
<% end %>
