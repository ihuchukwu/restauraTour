<%= form_for @restaurant, :html => {:multipart => true} do |f| %>
  <%= f.error_message %>
  <%= f.hidden_field :gallery_id %>
  <p>
    <%= f.label :name %>
    <%= f.text_field :name %>
  </p>
  <p>
    <%= f.file_field :image %>
  </p>
  <p>
    <%= f.label :remote_image_url %><br>
    <%= f.text_field :remote_image_url %>
  </p>
  <p><%= f.submit %></p>
<%= end %>
