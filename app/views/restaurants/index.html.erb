<body class="restaurant">

<!-- <h1>Restaurants#index</h1>
<p>Find me in app/views/restaurants/index.html.erb</p> -->


<h2>Restaurants</h2>


  <% @restaurants.each do |r| %>

    <div class="eachRest">
      <p><%= r.name %></p>
      <p><%= r.description %></p>
      <p><%= r.location %></p>
      <p><%= image_tag r.image %></p>


      <%= link_to "Delete", r, method: :delete, data: { confirm: 'Are you sure?'} %>


      <%= link_to 'Add restaurants', new_restaurant_path %>
      
      <%= link_to 'See menu', restaurant_menu_items_path(r) %>
      <br>
      <%= link_to 'See events', restaurant_events_path(r) %>


    </div>

  <% end %>

</body>
